<Window x:Class="AdivinaNumero.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdivinaNumero"
        mc:Ignorable="d"
        Title="Adivina el número" Height="145.5" Width="506">
    <Grid>
        <Label Content="¿Que numero he pensado?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="154"/>
        <TextBox x:Name="Numerousuario" HorizontalAlignment="Left" Height="23" Margin="190,13,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Comprobar" Content="Comprobar" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Width="108" Click="Comprobar_Click"/>
        <Button x:Name="Reiniciar" Content="Reiniciar" HorizontalAlignment="Left" Margin="145,58,0,0" VerticalAlignment="Top" Width="106" Click="Reiniciar_Click"/>
        <TextBlock x:Name="Respuesta" HorizontalAlignment="Left" Margin="334,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="154"/>

    </Grid>
</Window>
